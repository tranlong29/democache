@{
    ViewData["Title"] = "Home Page";
}

<style>
    .contr {
        min-height: 300px;
    }

    .text {
        font-size: 30px;
        font-weight: 700;
    }

    .shadows {
        height: 130px;
        box-shadow: 3px 3px 6px 0px rgba(0,0,0,0.75);
        -webkit-box-shadow: 3px 3px 6px 0px rgba(0,0,0,0.75);
        -moz-box-shadow: 3px 3px 6px 0px rgba(0,0,0,0.75);
    }
</style>

<div class="">
    <main class="col-sm-12 col-md-12 col-12  ">
        <h5>Dashbroad</h5>
        <div class="container bg-white contr">
            <div class="d-flex justify-content-around" id="accordionSidebars">
                <div class="col-3 mt-4 shadows text-white bg-primary rounded">
                    <div class="border-bottom">
                        <h6 class="mt-1"><a data-url="#" class="text-white link">Số sinh viên</a></h6>
                    </div>
                    <div class="d-flex justify-content-around mt-2">
                        <div class="mt-3">
                            <p class="text" id="lNewsCount"></p>
                        </div>
                        <div>
                            <i class="fas fa-clipboard-list" style="font-size: 35px; color: #fff; "></i>
                        </div>
                    </div>

                </div>
                <div class="col-3 mt-4 shadows text-white bg-info rounded">
                    <div class="border-bottom">
                        <h6 class="mt-1"><a data-url="#" class="text-white link">Số abc</a></h6>
                    </div>
                    <div class="d-flex justify-content-around mt-2">
                        <div class="mt-3">
                            <p class="text" id="labc"></p>
                        </div>
                        <div>
                            <i class="fas fa-tachometer-alt" style="font-size: 35px; color: #fff; "></i>
                        </div>
                    </div>

                </div>
                <div class="col-3 mt-4 shadows text-white bg-primary rounded bg-warning">
                    <div class="border-bottom">
                        <h6 class="mt-1"><a data-url="#" class="text-white link">Số sinh viên</a></h6>
                    </div>
                    <div class="d-flex justify-content-around mt-2">
                        <div class="mt-3">
                            <p class="text" id="lConfigCount"></p>
                        </div>
                        <div>
                            <i class="fas fa-layer-group" style="font-size: 35px; color: #fff;"></i>
                        </div>
                    </div>
                </div>

            </div>
            <div class="d-flex mt-5">
                <div class="col">
                    <div style="">
                        <canvas id="bar-chart" width="450" height="350"></canvas>
                    </div>
                </div>

                <div class="col">
                    <div style="">
                        <canvas id="bar-chart-grouped" width="450" height="350"></canvas>
                    </div>
                </div>
            </div>
        </div>

    </main>
</div>

<script>
    $(document).ready(function () {

        $('.link').click(function () {
            var clickedLinkUrl = $(this).data('url');
            $('#collapse_81').addClass('show');
            $('#collapse_37').removeClass('show');

            $('.collapse-item').each(function () {
                var collapseLinkUrl = $(this).data('url');

                if (clickedLinkUrl === collapseLinkUrl) {
                    $('.collapse-item').removeClass('active');
                    $(this).addClass('active');
                }
            });
        });
        var lNewsCount = parseInt('@ViewBag.LNews');
        var lConfigCount = parseInt('@ViewBag.LConfig');
        if (!isNaN(lNewsCount)) {
            startCounting(lNewsCount, 'lNewsCount');
        }
        if (!isNaN(lConfigCount)) {
            startCounting(lConfigCount, 'lConfigCount');
        }
        if (!isNaN(lConfigCount)) {
            startCounting(123, 'labc');
        }
    });
</script>